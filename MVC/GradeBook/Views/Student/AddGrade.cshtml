@model GradeBook.Models.Grade
@{
    ViewBag.Title = "AddGradeForm";
}

<h2>Adding grade for @Model.StudentName</h2>
<div class="container">
    <div class="row">
        <div class="col-md-3 col-md-offset-2">
            <form action="/Student/AddGrade" method="post">
                @Html.HiddenFor(m => m.StudentId)
                <div class="form-group">
                    @Html.LabelFor(m => m.Subject)
                    @Html.TextBoxFor(m => m.Subject, new {@class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Rate)
                    @Html.TextBoxFor(r => r.Rate, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-default">Add Grade</button>
            </form>
        </div>
    </div>
</div>

